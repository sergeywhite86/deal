<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="2" author="sergey_white">
        <createTable tableName="employment">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="varchar(50)"/>
            <column name="employer_inn" type="varchar(50)"/>
            <column name="salary" type="decimal(19,2)"/>
            <column name="position" type="varchar(100)"/>
            <column name="work_experience_total" type="integer"/>
            <column name="work_experience_current" type="integer"/>
        </createTable>
    </changeSet>

</databaseChangeLog>