<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="6" author="sergey_white">
        <createTable tableName="client">
            <column name="client_id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
            <column name="middle_name" type="varchar(255)"/>
            <column name="birth_date" type="date"/>
            <column name="email" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="gender" type="varchar(50)"/>
            <column name="marital_status" type="varchar(50)"/>
            <column name="dependent_amount" type="integer"/>
            <column name="passport_id" type="uuid"/>
            <column name="employment_id" type="uuid"/>
            <column name="account_number" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="passport_id"
                                 baseTableName="client"
                                 constraintName="fk_client_passport"
                                 referencedColumnNames="id"
                                 referencedTableName="passport"/>

        <addForeignKeyConstraint baseColumnNames="employment_id"
                                 baseTableName="client"
                                 constraintName="fk_client_employment"
                                 referencedColumnNames="id"
                                 referencedTableName="employment"/>
    </changeSet>

</databaseChangeLog>